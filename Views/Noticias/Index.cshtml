        }

        .hero-section h1 {
            font-size: 50px;
            font-weight: 700;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.8);
        }

        .news-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
