        }

        .news-card img {
            height: 250px;
            object-fit: cover;
        }

        .news-card .card-body {
            padding: 20px;
        }

        .news-card .card-body h5 {
            font-size: 20px;
            font-weight: 600;
        }

        .news-card .card-body p {
            font-size: 16px;
            color: #666;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .section-title h2 {
            font-size: 30px;
            font-weight: 700;
            color: #333;
        }

        .section-title p {
            color: #777;
            font-size: 18px;
        }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }

        .pagination .page-item .page-link {
