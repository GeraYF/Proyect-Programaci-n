@model Trabajo_Final.ViewModel.PromocionViewModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="row">
        @if (ViewData["Action"].Equals("Update"))
        {
            <h2>Editar Promoción: @Model.FormPromociones.Nombre</h2>
            <h2>ID: @Model.FormPromociones.Id</h2>
        }
        else
        {
            <h1>Crear una nueva Promoción</h1>
        }

        <form asp-action=@ViewData["Action"] method="post">
            <input type="hidden" asp-for="FormPromociones.Id" />
            <div class="form-group mt-3">
                <label asp-for=FormPromociones.Nombre></label>
                <input asp-for=FormPromociones.Nombre class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <label asp-for=FormPromociones.ValorDescuento> Valor de descuento</label>
                <input asp-for=FormPromociones.ValorDescuento class="form-control" required>
            </div>

            <div class="form-group mt-3">
                <label asp-for=FormPromociones.FechaInicio>Fecha Inicio</label>
                <input asp-for=FormPromociones.FechaInicio class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <label asp-for=FormPromociones.FechaFin>Fecha Fin</label>
                <input asp-for=FormPromociones.FechaFin class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <label asp-for="CategoriaId">Categoría</label>
                <select asp-for="CategoriaId" class="form-control"
                    asp-items="@(new SelectList(Model.Categorias, "Id", "Nombre"))" required>
                    <option value="">Seleccione una categoría para aplicar</option>
                </select>
            </div>
            @if (ViewData["Action"].Equals("Update"))
            {
                <div class="form-group mt-3">
                    <label asp-for=FormPromociones.Activo>Activar</label>
                    <input type="checkbox" asp-for="FormPromociones.Activo" class="form-check-input"
                        checked="@Model.FormPromociones.Activo" />

                </div>
                <button type="submit" class="btn btn-success mt-3">Actualizar Promoción</button>
            }
            else
            {
                <button type="submit" class="btn btn-success mt-3">Agregar Promoción</button>
            }
        </form>
    </div>
    <h1>Listado de Promociones</h1>
    <div class="row">
        <!-- Sección izquierda: Tabla de productos -->
        @foreach (var item in Model.Promociones)
        {
            <div class="card w-50">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">@item.ValorDescuento %</p>
                    <p class="card-text">@(item.Activo == true ? "Activo" : "Pendiente") </p>
                    <p class="card-text">@item.FechaInicio - @item.FechaFin </p>
                    <a asp-action="IndexUpdate" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </div>
            </div>
        }






    </div>
</div>