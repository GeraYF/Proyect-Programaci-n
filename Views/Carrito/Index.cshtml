@model IEnumerable<Trabajo_Final.Models.Carrito>
@{
    ViewData["Title"] = "Carrito";
}

<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>@ViewData["Carrito"]</title>

    <!-- Bootstrap icons-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Core theme CSS (includes Bootstrap)-->
        <link rel="stylesheet" href="~/css/Carrito/site.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <h2>Tu Carrito de Compras</h2>
        @if (!Model.Any())
        {
            <div class="content">
                <h2>No tienes ningun articulo en tu carrito.</h2>
                <h2>Empieza a comprar ingresando a tu cuenta</h2>
                <p>Ya creaste tu cuenta? Ingresa y observa tus articulos comprados</p>
                <div class="button-container">
                    <button class="start-shopping" onclick="window.location.href='/Catalogo/Index'">Comienza a Comprar</button>
                    <button class="sign-in" onclick="window.location.href='/Login/Index'">Ingresa</button>
                </div>
            </div>
        }
        else
        {
            <form id="carritoForm" method="post">  <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Total</th>
                            <th>Eliminar</th>  
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Producto != null ? item.Producto.Nombre : "Producto no disponible en catalogo")</td>
                                <td>@item.Cantidad</td>
                                <td>@item.Precio</td>
                                <td>@(item.Cantidad * item.Precio)</td>
                                <td>
                                    <button type="submit" name="eliminarProducto" value="@item.Id">  <i class="bi bi-trash"></i>  </button>
                                </td>  </tr>
                        }
                    </tbody>
                </table>
                <div class="text-end">
                    <button class="btn btn-success">Proceder al Pago</button>
                </div>
            </form>  }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Carrito/site.js"asp-append-version="true"></script>
</body>