@using Microsoft.AspNetCore.Identity
@using System.Collections.Generic;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!--Verificar si esta logeado o registrado-->
@*User es el objeto que se esta registrando*@
@if (SignInManager.IsSignedIn(User))
{
    //Extraer usuario de las identidades
    IdentityUser myidentity = await Task.Run(() => UserManager.GetUserAsync(User));

    //Extraer roles de la identidad
    var roles = await Task.Run(() => UserManager.GetRolesAsync(myidentity));

    @if (roles.Contains("admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello
                Administrador
                @User.Identity?.Name!</a>
        </li>

    }

}