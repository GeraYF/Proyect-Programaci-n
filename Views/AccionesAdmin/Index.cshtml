@model IEnumerable<Trabajo_Final.ViewModel.AdminViewModel>
@{
    Layout = "_LayoutAdmin";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <table class="table table-striped table-bordered table-hover text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Correo Electrónico</th>
                            <th>Número de Teléfono</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>
                                    <a asp-controller="AccionesAdmin" asp-action="Asignar" asp-route-id="@item.Id"
                                        class="btn btn-success btn-sm">Asignar</a>
                                    <a asp-controller="AccionesAdmin" asp-action="Delete" asp-route-id="@item.Id"
                                        class="btn btn-danger btn-sm">Revocar y Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
