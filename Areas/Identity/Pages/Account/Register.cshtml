@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4" style="width: 28rem;">
        <div class="card-body p-5">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center mb-4">Crea una Cuenta</h2>
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center" role="alert"></div>
                
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Input.Email" class="form-control border-0 shadow-sm" type="email" placeholder="Email Address" aria-required="true" autocomplete="username" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger mb-2"></span>

                <div class="input-group mb-3">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Input.Password" class="form-control border-0 shadow-sm" type="password" placeholder="Password" aria-required="true" autocomplete="new-password" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger mb-2"></span>

                <div class="input-group mb-3">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Input.ConfirmPassword" class="form-control border-0 shadow-sm" type="password" placeholder="Confirm Password" aria-required="true" autocomplete="new-password" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger mb-2"></span>

                <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2 shadow-sm">Registrarse</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}