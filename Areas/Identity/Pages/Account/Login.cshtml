@page
@using Microsoft.CodeAnalysis.Differencing
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 login-container shadow p-12 bg-white rounded">
        <h2 class="text-center">Inicio de Sesión</h2>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="Email">Correo electrónico *</label>
                <input type="email" name="Email" class="form-control" required placeholder="correo@gmail.com" />
            </div>

            <div class="form-group mb-3">
                <label for="Password">Contraseña *</label>
                <input type="password" name="Password" class="form-control" required />
            </div>

            <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-primary">INICIAR SESIÓN</button>
            </div>

            <div class="form-group text-center">
                <a href="/Account/Register">CREAR UNA CUENTA</a>
            </div>
        </form>
    </div>
</div>

<!-- Enlace al CDN de Bootstrap para garantizar responsividad -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    .login-container {
        width: 300px;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
        max-width: 100%;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #000;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #444;
    }

    a {
        color: #242424;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
    .min-vh-100 {
        min-height: 100vh;
    }
</style>





