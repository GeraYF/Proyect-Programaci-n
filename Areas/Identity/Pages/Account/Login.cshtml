@page
@model LoginModel



<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4" style="width: 28rem;">
        <div class="card-body p-5">
            <form id="account" method="post">
                <h2 class="text-center mb-4">Iniciar Sesión</h2>

                <div class="input-group mb-3">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Input.Email" type="email" name="Email" class="form-control border-0 shadow-sm"
                        placeholder="Correo electrónico" aria-required="true" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger mb-2"></span>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Input.Password" type="password" name="Password"
                        class="form-control border-0 shadow-sm" placeholder="Contraseña" aria-required="true"
                        autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger mb-2"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">Iniciar Sesión</button>
            </form>

            <div class="text-center mt-4">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tienes cuenta? Regístrate</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
