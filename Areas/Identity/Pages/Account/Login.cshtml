@page
@model LoginModel



<div class="container">
    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 login-container shadow p-12 bg-white rounded">
            <h2 class="text-center">Inicio de Sesión</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form id="account" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                        placeholder="correo@example.com" />
                    <label asp-for="Input.Email" class="form-label">Correo Electronico *</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                        aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Contraseña *</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div class="form-group mb-3 d-grid">
                    <button id="login-submit" type="submit" class="btn btn-primary">INICIAR SESIÓN</button>
                </div>

                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="form-group text-center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">CREAR UNA CUENTA</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                            confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Enlace al CDN de Bootstrap para garantizar responsividad -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .login-container {
            width: 300px;
            margin: 0 auto;
            text-align: center;
            padding: 20px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            max-width: 100%;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #000;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #444;
        }

        a {
            color: #242424;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .min-vh-100 {
            min-height: 100vh;
        }
    </style>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }