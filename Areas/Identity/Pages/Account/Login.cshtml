@page
@model LoginModel

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .modal {
        display: block; /* Show modal by default */
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px); /* Apply blur effect */
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .modal-content {
        background-color: #fefefe;
        padding: 40px; /* Increase padding for more vertical space */
        border: 1px solid #888;
        width: 80%; /* Adjust width */
        max-width: 500px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }
    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
    .input-group-text {
        background: #f1f1f1;
        border: none;
    }
    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .btn-primary {
        background: #fdd835; /* Darker yellow */
        border: none;
        color: #000; /* Black text color */
        transition: background 0.3s ease, transform 0.3s ease;
    }
    .btn-primary:hover {
        background: #fbc02d; /* Even darker yellow */
        transform: scale(1.05);
    }
    .btn-secondary {
        background: #000; /* Black color */
        border: none;
        color: #fff; /* White text color */
        transition: background 0.3s ease, transform 0.3s ease;
    }
    .btn-secondary:hover {
        background: #333; /* Darker black */
        transform: scale(1.05);
    }
    .welcome-message {
        text-align: center;
        margin-bottom: 20px;
    }
    .welcome-message h1 {
        font-size: 1.5rem; /* Smaller size */
        color: #000; /* Black color */
    }
    .welcome-message h2 {
        font-size: 3.5rem; /* Larger size */
        color: #fdd835; /* Yellow color */
        text-transform: uppercase; /* Uppercase text */
    }
</style>

<div id="loginModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="welcome-message">
            <h1>Bienvenido a</h1>
            <h2>INFOCOM</h2>
        </div>
        <form id="account" method="post">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>

            <div class="input-group mb-3">
                <span class="input-group-text bg-light border-0">
                    <i class="fas fa-user"></i>
                </span>
                <input asp-for="Input.Email" type="text" name="Email" class="form-control border-0 shadow-sm"
                    placeholder="Usuario o Correo electrónico" aria-required="true" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger mb-2"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text bg-light border-0">
                    <i class="fas fa-lock"></i>
                </span>
                <input asp-for="Input.Password" type="password" name="Password"
                    class="form-control border-0 shadow-sm" placeholder="Contraseña" aria-required="true"
                    autocomplete="current-password" />
                <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('Input_Password')">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger mb-2"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">Iniciar Sesión</button>
        </form>

        <div class="text-center mt-4">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary w-100 py-2 shadow-sm">Regístrate</a>
        </div>
        <div class="text-center mt-2">
            <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var modal = document.getElementById("loginModal");
        var span = document.getElementsByClassName("close")[0];

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        function togglePasswordVisibility(id) {
            var input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
            } else {
                input.type = "password";
            }
        }
    </script>
}
